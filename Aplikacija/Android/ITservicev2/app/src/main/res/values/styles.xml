<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/Narandzasti</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomFilledButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/button_rounded_filled</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">13dp</item>
        <item name="android:layout_marginRight">60dp</item>
        <item name="android:layout_marginLeft">60dp</item>
    </style>

    <style name="CustomTextButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/button_rounded_txt</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/NarandzastiSvetliji</item>
        <item name="android:layout_marginRight">100dp</item>
        <item name="android:layout_marginLeft">100dp</item>

    </style>
    <style name="CustomSpinner" parent="Base.Widget.AppCompat.Spinner">
        <item name="icon">@drawable/icon_edit</item>
        <item name="android:icon">@color/PopBoja</item>
    </style>

    <style name="CustomButtonCancel" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/button_cancel</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_marginRight">120dp</item>
        <item name="android:layout_marginLeft">120dp</item>
    </style>

    <style name="CustomButtonCancelPop" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/button_cancel</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_marginRight">100dp</item>
        <item name="android:layout_marginLeft">100dp</item>
    </style>

    <style name="TextViewOpis" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:paddingStart">3dp</item>
        <item name="android:paddingEnd">3dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:background">@drawable/popup</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:maxLines">4</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>
    <style name="TextViewHeader" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@color/NarandzastiLabel</item>
    </style>
    <style name="TextViewLabel" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textColor">@color/NarandzastiLabel</item>
        <item name="android:layout_marginStart">5dp</item>
    </style>
    <style name="TextViewLabelPop" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textColor">@color/NarandzastiLabel</item>
        <item name="android:layout_marginStart">15dp</item>
    </style>

    <style name="TextViewValue" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textColor">@color/SvetloSiva</item>
        <item name="android:layout_marginStart">5dp</item>
    </style>

    <style name="CustomCardView" parent="CardView">
        <item name="cardBackgroundColor">@color/DefaultBoja</item>
        <item name="android:background">@drawable/cardview</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>




    <style name="CustomEditText" parent="Widget.AppCompat.EditText">

        <item name="android:textColor">@color/White</item>
        <item name="android:backgroundTint">@color/Narandzasti</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:ems">10</item>
    </style>

    <style name="AppTheme.CustomTheme">

        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>

    </style>
    <style name="AppTheme.CustomToolbrar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionMenuTextColor">@color/Narandzasti</item>
    </style>


    <style name="CustomSpinnerItem" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@color/SvetloSiva</item>
    </style>

    <style name="CustomSpinnerDropDownItem" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@color/SvetloSiva</item>
    </style>
    <style name="CustomAlertDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:background">@color/PopBoja</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textColorPrimary">@color/SvetloSiva</item>
    </style>

</resources>
